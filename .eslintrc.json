{
    "extends": ["next/core-web-vitals", "eslint:recommended", "plugin:prettier/recommended"],
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "tabWidth": 4,
                "semi": true,
                "singleQuote": true,
                "trailingComma": "all",
                "endOfLine": "auto",
                "bracketSpacing": true,
                "printWidth": 160
            }
        ],

        "no-unused-vars": "warn",
        "no-console": "warn",
        "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0, "maxBOF": 0 }]
    }
}
